<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />
    
    <style name="Titlebar">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">56dp</item>
	    <item name="android:background">@drawable/titlebar</item>
	    <item name="android:textColor">#ffffff</item>
	 </style>
	 <style name="Titlebar.Logo">
	     <item name="android:layout_marginLeft">14dp</item>
	 </style>
	 <style name="Titlebar.Title">
	     <item name="android:textColor">#ffffff</item>
	     <item name="android:layout_marginLeft">1dp</item>
	     <item name="android:textSize">18sp</item>
	 </style>
	 
    <style name="CourseRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>
    
    <style name="CourseRowTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">0dp</item>
    </style>
    <style name="CourseRowInfo" parent="@android:style/TextAppearance.Small">
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>
    
    <style name="SVSessionDetails">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="SessionDetails">
        <item name="android:background">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="CounterWrapper">
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="QuestionCounter" parent="@android:style/TextAppearance.Small.Inverse"></style>
    <style name="QuestionOverall" parent="@android:style/TextAppearance.Large.Inverse"></style>
    <style name="Question" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/bg_question</item>
    </style>
    <style name="QuestionButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_answer_unselected</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/btn_answer_unselected_font</item>
    </style>
    
    <style name="CorrectAnswer" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#ffff00</item>
    </style>
    
    
    <style name="ProgressbarList">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/bg_light_grey</item>
    </style>
    <style name="ProgressbarText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/font_on_bg_lgiht_grey</item>
    </style>
    
</resources>