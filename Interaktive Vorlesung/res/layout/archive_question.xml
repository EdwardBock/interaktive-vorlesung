<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
>
	
     <TextView 
     android:layout_alignParentTop="true"
     android:layout_alignParentLeft="true"
     android:id="@+id/tx_question"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" 
     android:text="@string/question"
     style="@style/Question"
     />
     <TextView
     android:layout_below="@id/tx_question"
     android:id="@+id/tx_correct_answer"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" 
     android:singleLine="false"
     android:text="@string/question_answer"
     />
     <TextView
     android:layout_below="@id/tx_correct_answer"
     android:id="@+id/tx_a1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:singleLine="true"
     android:text="A"
     />
     <TextView
     android:layout_below="@id/tx_a1"
     android:id="@+id/tx_a2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:singleLine="true"
     android:text="B"
     />
     <TextView
     android:layout_below="@id/tx_a2"
     android:id="@+id/tx_a3"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:singleLine="true"
     android:text="C"
     />
     <TextView
     android:layout_below="@id/tx_a3"
     android:id="@+id/tx_a4"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:singleLine="true"
     android:text="D"
     />
</RelativeLayout>