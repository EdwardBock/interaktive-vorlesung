<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionType" >

    <RelativeLayout 
    android:id="@+id/actionbar"
    android:layout_alignParentTop="true"
    style="@style/Titlebar"
    >
        <ImageView 
        android:id="@+id/actionbar_logo"
        style="@style/Titlebar.Logo"
        android:src="@drawable/actionbar_logo"
        android:contentDescription="@string/actionbar_icon_cd" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"   
        />
        <TextView 
        android:id="@+id/actionbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_toRightOf="@id/actionbar_logo"
        android:layout_alignBottom="@id/actionbar_logo"
        android:text="@string/title_activity_transaction_type"
        style="@style/Titlebar.Title"
        />
      
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_transactiontype_qrcode"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/actionbar"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="118dp"
        android:src="@android:drawable/ic_menu_camera" />

    <ImageButton
        android:id="@+id/btn_transactiontype_favourite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/btn_transactiontype_qrcode"
        android:layout_below="@+id/btn_transactiontype_qrcode"
        android:layout_marginTop="54dp"
        android:src="@android:drawable/btn_star_big_on" />

</RelativeLayout>