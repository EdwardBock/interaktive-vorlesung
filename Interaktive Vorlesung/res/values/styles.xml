<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />
    
    <style name="Titlebar">
	  	<item name="android:textSize">18dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingTop">5dp</item>
	    <item name="android:paddingBottom">5dp</item>
	    <item name="android:paddingLeft">10dp</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">48dp</item>
	    <item name="android:background">@drawable/titlebar</item>
	    <item name="android:textColor">#ffffff</item>
	 </style>
	 
    <style name="CourseRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">4dp</item>
    </style>
    
    <style name="CourseRowTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">0dp</item>
    </style>
    <style name="CourseRowInfo" parent="@android:style/TextAppearance.Small">
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

</resources>