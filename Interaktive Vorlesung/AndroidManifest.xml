<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.bockstallmann.interaktive.vorlesung"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:smallScreens="true" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".VorlesungListe"
            android:label="@string/title_activity_vorlesung_liste" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PdfReader"
            android:label="@string/title_activity_pdf_reader" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.bockstallmann.interaktive.vorlesung.VorlesungListe" />
        </activity>
    </application>

</manifest>