        </activity>
        <activity
            android:name=".activities.CourseDetails_details"
            android:label="@string/title_activity_course_details_details" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CourseDetails_sessions"
            android:label="@string/title_activity_course_details_sessions" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
